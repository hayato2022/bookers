<h1>Editing Book</h1>
<% if @book.errors.any? %>
 <div id="error-explanation">
 <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
 <ul>
   <% @book.errors.full_messages.each do |messages| %>
   <li><%= messages %></li>
   <% end %>
 </ul>
 </div>
<% end %>
<%= form_with model: @book do |f| %>
<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :body %><br>
  <%= f.text_field :body %>
</div>

<div class="action">
  <%= f.submit 'Updete Book' %>
</div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
